<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Tickers</title>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: black;
            color: #0EF;
            font-family: 'Rajdhani', sans-serif;
            text-align: center;
            margin: 40px;
            font-size: 24px; /* Base font size for the body */
        }

        h1 {
            font-size: 48px; /* Font size for the title */
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #0EF;
            padding: 8px 15px;
            text-align: left;
        }

        th {
            background-color: #222;
            font-size: 36px; /* Font size for table headers */
        }

        td {
            font-size: 30px; /* Font size for table data */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Top 10 Cryptocurrencies by 24-Hour Volume</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Symbol</th>
                    <th>Last Trade Price</th>
                    <th>24h Change</th>
                    <th>24h Volume</th>
                </tr>
            </thead>
            <tbody>
                <% tickers.forEach(ticker => { %>
                    <tr>
                        <td><%= ticker.symbol %></td>
                        <td><%= ticker.last_trade_price %></td>
                        <td><%= ticker.price_24h %></td>
                        <td><%= ticker.volume_24h %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
